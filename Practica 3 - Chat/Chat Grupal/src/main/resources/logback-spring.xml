<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Importar perfiles de Spring Boot -->
    <springProperty name="LOG_FILE" source="logging.file.name" defaultValue="logs/chat-aplicacion.log"/>
    
    <!-- Appender para consola con colores -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} 
                %highlight(%-5level) 
                %cyan([%thread]) 
                %yellow(%logger{36}) 
                %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Appender para archivo de logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} 
                [%thread] 
                %-5level 
                %logger{36} 
                %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Appender especial para operaciones de chat -->
    <appender name="CHAT_OPERATIONS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/chat-operaciones.log</file>
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} 
                %highlight(%-5level) 
                [%thread] 
                %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/chat-operaciones.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- Logger específico para el controlador de chat -->
    <logger name="ChatGrupal.demo.controller" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="CHAT_OPERATIONS"/>
    </logger>

    <!-- Logger específico para el servicio de sala -->
    <logger name="ChatGrupal.demo.service" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="CHAT_OPERATIONS"/>
    </logger>

    <!-- Logger raíz -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Perfiles de Spring -->
    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="WARN">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
</configuration>
